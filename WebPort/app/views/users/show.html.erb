<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.portfolios.any? %>
      <h3>Portfolios </h3>
      
        <%= render @portfolios %>
      
      <%= will_paginate @portfolios %>
    <% end %>
  </div>
</div>
