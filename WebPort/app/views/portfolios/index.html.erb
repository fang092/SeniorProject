<div class = "jumbotron page-content-wrapper">
  <div class = "container-fluid">

      <p id="notice"><%= notice %></p>

      <h1>Listing Portfolios</h1>

      <table>
        <thead>
          <tr>
            <th>Picture</th>
            <th>Info</th>
            <th>Links</th>
            <th>Content</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @portfolios.each do |portfolio| %>
            <tr>
              <td><%= image_tag portfolio.image.url(:thumb) %></td>
              <td><%= portfolio.info %></td>
              <td><%= portfolio.links %></td>
              <td><%= portfolio.content %></td>
              <td><%= link_to 'Show', portfolio %></td>
              <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
              <td><%= link_to 'Destroy', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Portfolio', new_portfolio_path %>
  </div>
</div>